<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Shop.View.Controllers.AuthorisationController">
    <TextField fx:id="login" cache="true" layoutX="150" layoutY="100.0" prefHeight="40.0" prefWidth="250.0" promptText="Логин">
      <font>
         <Font name="Times New Roman" size="14.0" />
      </font>
    </TextField>
    <PasswordField fx:id="password" layoutX="150.0" layoutY="150.0" prefHeight="40.0" prefWidth="250.0" promptText="Пароль">
        <font>
            <Font size="14.0" />
        </font>
    </PasswordField>
    <Button layoutX="150" layoutY="200" onMouseClicked="#MouseLog" prefHeight="40.0" prefWidth="100.0" text="Вход" />
   <Button layoutX="300.0" layoutY="200.0" onMouseClicked="#MouseReg" prefHeight="40.0" prefWidth="100.0" text="Регистрация" />
   <Label fx:id="ErrorField" layoutX="140.0" layoutY="250.0" prefHeight="168.0" prefWidth="310.0" textFill="red" />
</AnchorPane>
